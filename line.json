{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "merged_sanitation_data.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Location == 'Bangladesh'"}
  ],
  "width": "container",
  "height": 300,
  "encoding": {
    "x": {
      "field": "Period",
      "type": "temporal",
      "title": "Year"
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "y": {"field": "Total_defacation", "type": "quantitative", "title": "Total Defecation (%)"},
        "color": {"value": "#1f77b4"}
      }
    },
    {
      "mark": "line",
      "encoding": {
        "y": {"field": "Total_handwash", "type": "quantitative", "title": "Total Handwashing (%)"},
        "color": {"value": "#ff7f0e"}
      }
    }
  ]
}
