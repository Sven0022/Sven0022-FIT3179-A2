{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "deaths_env.csv",
    "format": {"type": "csv"}
  },
  "width": "container",
  "height": 350,
  "title": "Top 10 Countries by Deaths for Noncommunicable Diseases",
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Location",
      "type": "nominal",
      "title": "Country",
      "sort": "-y"
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Death Count"
    },
    "tooltip": [
      {"field": "Location", "type": "nominal", "title": "Country"},
      {"field": "Dim1", "type": "nominal", "title": "Cause"},
      {"field": "Value", "type": "quantitative", "title": "Death Count"}
    ]
  },
  "transform": [
    {
      "filter": {
        "field": "Dim1",
        "equal": "Noncommunicable diseases"
      }
    },
    {
      "calculate": "toNumber(replace(datum.Value, ' ', ''))",
      "as": "Value"
    },
    {
      "filter": "isValid(datum.Value)"
    },
    {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{"field": "Value", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ]
}
